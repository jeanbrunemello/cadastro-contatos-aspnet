@{
    ViewData["Title"] = "Criar";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar novo contato</h1>

</div>

<form>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" aria-describedby="input nome" placeholder="Nome do contato">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" aria-describedby="email do contato" placeholder="Ex: email@mail.com">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="number" class="form-control" id="telefone" placeholder="(11) 111111111">
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a type="button"  class="btn btn-secondary" asp-controller="Contatos" asp-action="Index">Voltar</a>
</form>