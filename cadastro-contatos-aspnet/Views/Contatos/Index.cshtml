
@model List<ContatoModel>
@{
    ViewData["Title"] = "Lista de Contatos";
}

<div class="text-center">


    <h1 class="display-4">Lista de Contatos</h1>
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">

    <a class="btn btn-primary" role="button" asp-controller="Contatos" asp-action="Criar">Adicionar</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">e-Mail</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null && Model.Any())
            {
                foreach(ContatoModel item in Model)
                {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>@item.Telefone</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a role="button" class="btn btn-light" asp-route-id="@item.Id" asp-action="Editar" asp-controller="Contatos">Editar</a>
                                <a role="button" class="btn btn-danger" asp-action="ApagarConfirma" asp-controller="Contatos" asp-route-id="@item.Id">Excluir</a>
                    </div>
                </td>
            </tr>
                    
                }
            }


        </tbody>
    </table>

</div>



